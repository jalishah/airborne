   - [ gps_sensor.gps,           mavlink.gps          ]
   - [ icarus.ctrl,              ferry_ctrl.ctrl      ]
   - [ icarus.power_ctrl,        powerman.ctrl        ]
   - [ icarus.power_mon,         powerman.mon         ]
   - [ ferry_ctrl.state,         icarus.state         ]
   - [ blackbox.state_machine,   icarus.state         ]
